<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <label>Lokasi</label>
      <select class="form-control" name="location_id" required>
        <option disabled selected value>locations</option>
        <% locations.forEach(e => { const selected = e.id === value.location_id ? "selected" : "" %>
        <option <%=selected%> value="<%=e.id%>"><%=e.name%></option>
        <% }) %>
      </select>
    </div>
  </div>
  <div class="col-md-12">
    <div class="form-group">
      <label>Criteria</label>
      <select class="form-control" name="criteria_id" required>
        <option disabled selected value>Criteria</option>
        <% criterias.forEach(e => { const selected = e.id === value.criteria_id ? "selected" : "" %>
        <option <%=selected%> value="<%=e.id%>"><%=e.name%></option>
        <% }) %>
      </select>
    </div>
  </div>
  <div class="col-md-12">
    <div class="form-group">
      <label>Name</label>
      <input
        type="text"
        name="name"
        class="form-control"
        placeholder="Name"
        value="<%= value.name%>"
        required
      />
    </div>
  </div>
  <div class="col-md-12">
    <div class="form-group">
        <label>Value</label>
        <input type="number" step="0.01" min="0" max="1" name="value" class="form-control" placeholder="Nilai" value="<%= value.value%>" required />
    </div>
</div>
</div>
