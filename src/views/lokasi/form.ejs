<div class="row">
    <div class="col-md-12">
        <div class="form-group">

            <label>Lokasi</label>
            <input type="text" name="name" class="form-control" placeholder="Lokasi" required value="<%= location%>"/>
        </div>
    </div>
    
    <% forms.forEach( (form, i) => { const value = form.value || "" %>
    <div class="col-md-12">
        <div class="form-group">
            <label><%= form.name %></label>
            <input type="number" step="0.01" min="0" max="1" name="<%= form.id %>" class="form-control" placeholder="<%= form.name %>" value="<%= value%>" required />
        </div>
    </div>
    <% }) %>

</div>